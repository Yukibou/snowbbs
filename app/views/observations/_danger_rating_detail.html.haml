- danger_rating = observation.danger_rating
.panel.panel-info
  .panel-heading
    %h3.panel-title
      雪崩危険度 Danger Rating
  .panel-body
    %table.table.table-bordered.table-striped
      %tr
        %td.td-nowrap
          = t('activerecord.attributes.danger_rating.alpine_zone')
        %td
          = danger_rating.alpine_zone_text
      %tr
        %td.td-nowrap
          = t('activerecord.attributes.danger_rating.treeline_zone')
        %td
          = danger_rating.treeline_zone_text
      %tr
        %td.td-nowrap
          = t('activerecord.attributes.danger_rating.below_treeline_zone')
        %td
          = danger_rating.below_treeline_zone_text
      %tr
        %td.td-nowrap
          = t('activerecord.attributes.danger_rating.comments')
        %td
          = danger_rating.comments
      %tr
        %td.td-nowrap
          = t('activerecord.attributes.danger_rating.confidence')
        %td
          = danger_rating.confidence_text
