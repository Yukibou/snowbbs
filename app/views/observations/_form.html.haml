= simple_form_for(@observation, wrapper: :horizontal_form, html: { class: 'form-horizontal' }) do |f|
  = f.error_notification
  .panel.panel-info
    .panel-heading
      %h3.panel-title
        日付と場所 Date & Location
    .panel-body
      .form-inputs
        = f.input :publish, wrapper: :horizontal_radio_and_checkboxes
        = f.input :observation_at, wrapper: :horizontal_select_date, as: :date
        = f.association :area
        = f.input :mountain
        = f.input :location
  .panel.panel-info
    .panel-heading
      %h3.panel-title
        観察データ Observation data
    .panel-body
      .form-inputs
        = f.input :elevation_low
        = f.input :elevation_low_comments
        = f.input :elevation_high
        = f.input :elevation_high_comments
        = f.input :temperature_low
        = f.input :temperature_low_comments
        = f.input :temperature_high
        = f.input :temperature_high_comments
        = f.input :sky
        = f.input :sky_comments
        = f.input :wind_speed
        = f.input :wind_direction
        = f.input :wind_comments
        = f.input :precipitation_type
        = f.input :precipitation_rate
        = f.input :precipitation_comments
        = f.input :avalanches
        = f.input :avalanche_occurred, wrapper: :horizontal_radio_and_checkboxes
        = f.input :snowpack
        = f.input :spin_url
        = f.input :comments
        = f.input :images, as: :file, input_html: { multiple: true }
        = f.input :movie_url
  .panel.panel-info
    .panel-heading
      %h3.panel-title
        評価 Evaluation
    .panel-body
      .field
        = f.simple_fields_for :evaluations do |ef|
          = render 'evaluation_fields', f: ef
        = link_to_add_association 'ハザード評価の追加', f, :evaluations, class: 'btn btn-info'
      .field
        = f.simple_fields_for :danger_rating do |df|
          = render 'danger_rating_fields', f: df
  .form-actions
    = f.button :submit, class: 'btn btn-primary'
